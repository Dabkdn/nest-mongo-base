{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node", // Important for module resolution
    "resolveJsonModule": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*",
    "seed"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}